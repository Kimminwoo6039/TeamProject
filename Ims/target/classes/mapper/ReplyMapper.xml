<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace = "reply">

	
	<insert id="insert">
	
	insert into reply(product_code,member_id,content,rating) values(#{product_code},#{member_id},#{content},#{rating})
	
	</insert>
	
	<select id="list" resultType="com.Ims.shop.vo.ReplyVo">
	
	select * from reply where product_code=#{product_code} order by content desc
	
	</select>
	
	
	
</mapper>